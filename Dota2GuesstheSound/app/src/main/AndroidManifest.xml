<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/AdMob_App_Id"/>

        <activity android:name="com.dsapps2018.dota2guessthesound.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dsapps2018.dota2guessthesound.StartQuizActivity"
            android:parentActivityName="com.dsapps2018.dota2guessthesound.MainActivity"
            android:theme="@style/playGameTheme" />
        <activity android:name="com.dsapps2018.dota2guessthesound.ToastActivity" />
        <activity android:name="com.dsapps2018.dota2guessthesound.OptionsActivity"
            android:parentActivityName="com.dsapps2018.dota2guessthesound.MainActivity"/>
        <activity
            android:name="com.dsapps2018.dota2guessthesound.FastFingerActivity"
            android:theme="@style/playGameTheme" />
        <activity
            android:name="com.dsapps2018.dota2guessthesound.InvokerActivity"
            android:theme="@style/playGameTheme" />
        <activity
            android:name="com.dsapps2018.dota2guessthesound.AboutActivity"
            android:parentActivityName="com.dsapps2018.dota2guessthesound.MainActivity" />
    </application>

</manifest>